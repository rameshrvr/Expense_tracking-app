<h1>
  <%= link_to 'Add New Expense', new_expense_path, class: 'btn btn-primary' %>
  <b>Expense</b>
</h1>
<% if @expenses.blank? %>
  <h1><small>Currently there are no records</small></h1>
<% else %>
  <h1><small>  list of all tracked expenses</small></h1>
  <table class="table">
  <thead>
  <tr>
    <th>Expense Name</th>
    <th>Amount</th>
    <th>Active?</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @expenses.each do |expense| %>
      <tr>
        <td>
          <%= link_to expense.name, expense_path(expense) %>
        </td>
        <td>
          <%= expense.weight %>
        </td>
        <td>
          <%= expense.is_active? ? 'yes' : 'no' %>
        </td>
        <td>
          <%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-primary btn-mini' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>
