<h1>
  <%= link_to 'New Month', new_month_path, class: 'btn btn-primary' %>
  <b>Months</b>
</h1>
<% if @months.blank? %>
  <h1><small>Currently there are no records</small></h1>
<% else %>
  <h1><small>list of all tracked month</small></h1>
  <table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Real expenses sum</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @months.each do |month| %>
      <tr>
        <td>
          <%= month.id %>
        </td>
        <td>
          <%= link_to month.name, month_path(month) %>
        </td>
        <td>
          <%= month.month_expenses.sum('month_expenses.sum_real') %>
        </td>
        <td>
          <%= link_to 'Edit', edit_month_path(month), class: 'btn btn-primary btn-mini' %>
        </td>
      </tr>
  <% end %>
  </tbody>
  </table>
<% end %>
